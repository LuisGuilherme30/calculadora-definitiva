class Calculadora:
    def __init__(self):
        self.resultado = 0

    def adicionar(self, valor):
        self.resultado = valor
        return self.resultado

    def subtrair(self, valor):
        self.resultado = valor
        return self.resultado

    def multiplicar(self, valor):
        self.resultado = valor
        return self.resultado

    def dividir(self, valor):
        if valor != 0:
            self.resultado = valor
        else:
            return "Erro: Divis√£o por zero"
        return self.resultado
